<p id="notice"><%= notice %></p>

<h1>Estudiantes</h1>

<table>
  <thead>
    <tr>
      <th>Porcentaje carrera</th>
      <th>Creditos disponibles</th>
      <th>Creditos aprobados</th>
      <th>Creditos inscritos</th>
      <th>Creditos pendientes</th>
      <th>Materia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estudiantes.each do |estudiante| %>
      <tr>
        <td><%= estudiante.porcentaje_carrera %></td>
        <td><%= estudiante.creditos_disponibles %></td>
        <td><%= estudiante.creditos_aprobados %></td>
        <td><%= estudiante.creditos_inscritos %></td>
        <td><%= estudiante.creditos_pendientes %></td>
        <td><%= estudiante.materia %></td>
        <td><%= link_to 'Show', estudiante %></td>
        <td><%= link_to 'Edit', edit_estudiante_path(estudiante) %></td>
        <td><%= link_to 'Destroy', estudiante, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

